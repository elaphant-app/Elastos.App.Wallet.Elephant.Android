<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardBackgroundColor="@color/pin_pad_delete"
    app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true" >

    <RelativeLayout
        android:id="@+id/wallet_card"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="@drawable/cardbgseleced">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/wallet_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wallet_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxWidth="250dp"
                    android:textSize="24sp"
                    android:textColor="@android:color/white"/>

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:src="@drawable/walletedit"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="bottom"/>

            </LinearLayout>


            <TextView
                android:id="@+id/wallet_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="11sp"
                android:textColor="@color/wallet_time_color"/>

        </LinearLayout>
        
        <ImageView
            android:id="@+id/wallet_selected"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/walletselected"/>

        <LinearLayout
            android:id="@+id/wallet_backup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/infonotbackup"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="11sp"
                android:textColor="#FFFBFB"
                android:text="@string/multi_wallet_phares_not_backup"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

