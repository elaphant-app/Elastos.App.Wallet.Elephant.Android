<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/multisign_spend"
        android:textSize="14sp"
        android:textColor="@color/create_new_wallet_button_dark" />

    <TextView
        android:id="@+id/multisign_tx_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/multisign_tx_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/multisign_balance"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/multisign_accept"
        android:textSize="14sp"
        android:textColor="@color/create_new_wallet_button_dark" />

    <TextView
        android:id="@+id/multisign_tx_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/multisign_tx_to_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/multisign_tx_memo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:visibility="gone"
        android:textColor="@color/black" />

    <View
        android:id="@+id/multisign_tx_signed"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/black_cccccc"
        />

    <TextView
        android:id="@+id/multisign_tx_signed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:text= "@string/multisign_signed_title"/>

</LinearLayout>