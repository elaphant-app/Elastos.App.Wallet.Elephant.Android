<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp"
    android:background="#33000000">

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/explore_edit_pop"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/ic_explore_edit_pop"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:text="@string/explore_pop_edit"
        android:textColor="#333333"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/explore_add_pop"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent">

        <com.breadwallet.presenter.customviews.BaseTextView
            android:id="@+id/explore_url_pop"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/ic_explore_url_pop"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="@string/explore_pop_add_by_url"
            android:textColor="#333333"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <com.breadwallet.presenter.customviews.BaseTextView
            android:id="@+id/explore_scan_pop"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/ic_explore_scan_pop"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:text="@string/explore_pop_scan_to_add"
            android:textColor="#333333"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/explore_url_pop" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
