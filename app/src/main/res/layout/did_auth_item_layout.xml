<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/auth_item_bg"
    android:minHeight="56dp">

   <com.breadwallet.presenter.customviews.RoundImageView
       android:id="@+id/auth_app_icon"
       android:layout_width="20dp"
       android:layout_height="20dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       android:layout_marginLeft="16dp"
       android:src="@mipmap/ic_launcher"/>

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/auth_app_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Elasto Developer Site"
        android:textSize="16sp"
        android:singleLine="true"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black_333333"
        app:layout_constraintLeft_toRightOf="@id/auth_app_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.breadwallet.presenter.customviews.BaseTextView
        android:layout_width="7dp"
        android:layout_height="12dp"
        android:background="@drawable/ic_did_enter_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>
