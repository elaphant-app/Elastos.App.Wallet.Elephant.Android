<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BRLinearLayoutWithCaret">
        <attr name="strokeColor" format="color"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="withStroke" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="BRButton">
        <attr name="isBreadButton" format="boolean"/>
        <attr name="buttonType" format="integer"/>
        <attr name="customBFont" format="string"/>
        <attr name="hasShadow" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="PinLayout">
        <attr name="pinDigitsResId" format="reference"/>
    </declare-styleable>

    <declare-styleable name="BRKeyboard">
        <attr name="showAlphabet" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="BRNotificationBar">
        <attr name="breadText" format="string"/>
    </declare-styleable>

    <declare-styleable name="BaseTextView">
        <attr name="customTFont" format="string"/>
    </declare-styleable>
    <declare-styleable name="BREdit">
        <attr name="customEFont" format="string"/>
    </declare-styleable>

    <attr name="indexBarTextSize" format="dimension" />

    <declare-styleable name="IndexBar">
        <attr name="indexBarTextSize" />
        <attr name="indexBarPressBackground" format="color" />
    </declare-styleable>

    <declare-styleable name="BubbleView">
        <attr name="arrowWidth" format="dimension" />
        <attr name="angle" format="dimension" />
        <attr name="arrowHeight" format="dimension" />
        <attr name="arrowPosition" format="dimension" />
        <attr name="bubbleColor" format="color" />
        <attr name="arrowLocation" format="enum">
            <enum name="left" value="0x00" />
            <enum name="right" value="0x01" />
            <enum name="top" value="0x02" />
            <enum name="bottom" value="0x03" />
        </attr>
    </declare-styleable>

    <!-- 按钮自定义属性 -->
    <declare-styleable name="StateButton">
        <!--text color-->
        <attr name="normalTextColor" format="color|reference" />
        <attr name="pressedTextColor" format="color|reference" />
        <attr name="unableTextColor" format="color|reference" />

        <!--stroke width and color, dash width, dash gap-->
        <attr name="strokeDashWidth" format="dimension|reference" />
        <attr name="strokeDashGap" format="dimension|reference" />
        <attr name="normalStrokeWidth" format="dimension|reference" />
        <attr name="pressedStrokeWidth" format="dimension|reference" />
        <attr name="unableStrokeWidth" format="dimension|reference" />
        <attr name="normalStrokeColor" format="color|reference" />
        <attr name="pressedStrokeColor" format="color|reference" />
        <attr name="unableStrokeColor" format="color|reference" />

        <!--background color-->
        <attr name="normalBackgroundColor" format="color|reference" />
        <attr name="pressedBackgroundColor" format="color|reference" />
        <attr name="unableBackgroundColor" format="color|reference" />

        <!--background radius-->
        <attr name="radius" format="dimension|reference" />
        <attr name="round" format="boolean|reference" />

        <!--animation duration-->
        <attr name="animationDuration" format="integer|reference" />
    </declare-styleable>

    <declare-styleable name="PraiseListView">
        <attr name="item_color" format="color"/>
        <attr name="item_selector_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="ExpandTextView">
        <attr name="showLines" format="integer"/>
    </declare-styleable>
</resources>